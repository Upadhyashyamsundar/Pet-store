<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Delete cats</title>
  <meta charset="utf-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/petsStyle.css">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono&family=Lobster&family=Varela+Round&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">

  <header>
    <h1 class="headerName">You can delete any cat here...</h1>
  </header>

  <body>
    

    <% Cats.forEach(function(cat){  %>

      <form action="/adminDeleteCat/<%=cat.Cid%>" method="POST">

    
          <h1 class="breedName"><%=cat.Cbreed %></h1>
          <img class="dogImg" src="/images/cats/<%=cat.img%>" alt="puppy">
          <div class="dogInfo">
          <p>Colour - <%= cat.Ccolor %></p>
          <p>Age - <%= cat.Cage %> Weeks</p>
          <p>Price - â‚¹<%= cat.Cprice %></p>
          </div>
         
          <button class="btn btn-danger" type="submit" onclick="myFunction()">Delete!</button> 
          <hr>
  


      </form>

      <script>
        function myFunction() {
          if(confirm("Are you sure want to Delete this Cat?") == true){
            alert("Deleted successfully!");

          }else{
            alert("Cancellation Stopped");
          }
        }
      </script>

      
        
        
        <% }) %>
       
 </body>

 <footer class="footer">Want delete Dogs <a href="/adminDeleteDog">Dogs</a>?</footer>
